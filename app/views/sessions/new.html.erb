<h1 class= "text-center mt-4"> User Login Form  </h1>

<div class="container">
<%= form_with scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
  
  <p>
    <%= f.label :Email %><br/> 
    <%= f.email_field :email, class: "form-control mt-2", placeholder: " Enter your Email address" %> 
  </p>
  <p>
      <%= f.label :Password %>
      <%= f.password_field :password, class: "form-control mt-2", placeholder: "Enter your password" %>
     
  </p>    
  
  <p>  
  <div class = " form-group row justify-content-center mt-3">    <%= f.submit "login", class: "btn btn-outline-light btn-lg " %> </div>
  </p>
  </div>

<% end %>